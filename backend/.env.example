# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="mongodb://localhost:27017/kronus_crm"

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this
JWT_REFRESH_EXPIRE=30d

# Password Reset
RESET_PASSWORD_EXPIRE=3600000

# Email Configuration (for forgot password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@kronuscrm.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_BUCKET_NAME=kronus-leads
R2_PUBLIC_URL=https://pub-your-id.r2.dev

# Email Service Credentials
EMAIL_SERVICE_URL=http://localhost:3500
EMAIL_SERVICE_API_KEY=your-strong-random-api-key-here